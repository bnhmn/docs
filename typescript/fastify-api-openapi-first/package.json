{
  "name": "todo-list-api",
  "private": true,
  "type": "module",
  "scripts": {
    "codegen": "rimraf ./src/generated && openapi-ts -p fastify -i openapi.yaml -o src/generated",
    "dev": "tsx watch ./src/server.ts",
    "test": "vitest",
    "check": "eslint . --ext .ts && prettier --check . && spectral lint openapi.yaml",
    "format": "prettier --write .",
    "postinstall": "npm run codegen"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-openapi-glue": "^4.8.1"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.64.12",
    "@stoplight/spectral-cli": "^6.14.3",
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
